---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact - Ayberk Savas">
  <div class="page">
    <header>
      <a href="/" class="logo">Ayberk Savas</a>
      <h1 class="page-title">Contact</h1>
    </header>
    <main>
      <article class="entry">
        <h2 class="entry-title">Email</h2>
        <p class="entry-text"><a href="mailto:REDACTED" class="entry-link">REDACTED</a></p>
      </article>
      <article class="entry">
        <h2 class="entry-title">Phone</h2>
        <p class="entry-text">REDACTED</p>
      </article>
      <article class="entry">
        <h2 class="entry-title">GitHub</h2>
        <p class="entry-text"><a href="https://github.com/ayberksavas" target="_blank" class="entry-link">github.com/ayberksavas</a></p>
      </article>
      <article class="entry">
        <h2 class="entry-title">LinkedIn</h2>
        <p class="entry-text"><a href="https://www.linkedin.com/in/ayberksavass" target="_blank" class="entry-link">linkedin.com/in/ayberksavass</a></p>
      </article>
    </main>
  </div>
</Layout>

<style>
  .page {
    max-width: 800px;
    padding: 2.5rem 5rem;
  }

  .logo {
    font-family: "Playfair Display", Georgia, serif;
    font-size: 1.6rem;
    font-weight: 500;
    font-style: italic;
    color: var(--copper);
    text-decoration: none;
  }

  .page-title {
    font-family: "Playfair Display", Georgia, serif;
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--text);
    margin-top: 0.8rem;
  }

  main {
    margin-top: 3rem;
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .entry {
    padding-left: 2rem;
  }

  .entry-title {
    font-family: "Playfair Display", Georgia, serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text);
    margin-bottom: 0.8rem;
  }

  .entry-text {
    font-family: "Source Serif 4", Georgia, serif;
    font-size: 1.1rem;
    color: var(--text);
    line-height: 1.7;
    padding-left: 1rem;
  }

  .entry-link {
    color: var(--copper);
    text-decoration: none;
  }

  .entry-link:hover {
    text-decoration: underline;
  }
</style>
